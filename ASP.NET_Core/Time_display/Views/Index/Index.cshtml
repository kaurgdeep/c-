<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <style>
            fieldset{
                width: 500px;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <fieldset>

            <legend><h1>Current Time and Date:</h1></legend>
            @{
                DateTime CurrentTime = DateTime.Now;
                string formattedDate = String.Format("{0:MMM dd, yyyy}", CurrentTime);
                string formattedTime = String.Format("{0:hh:mm tt}", CurrentTime);
                <h2>@formattedDate</h2>
                <h2>@formattedTime</h2>

            }
        </fieldset>
    </body>
</html>
