@model User
<h2>Register</h2>
 @if(ViewBag.AlreadyInUseEmail == true) {<p>Email already in use!</p>}  

@if(ViewBag.PasswordError != null) {
    <p>@ViewBag.PasswordError</p>
}
<form action="RegisterUser" method="post">
    <table>
    <label>First Name:</label><span asp-validation-for="FirstName"></span>
    <input asp-for="FirstName"><br>
    

    <label>Last Name:</label><span asp-validation-for="LastName"></span>
    <input asp-for="LastName"><br>
                
    <label>Email:</label><span asp-validation-for="Email"></span>
    <input asp-for="Email"><br>

    <label>Password:</label><span asp-validation-for="Password"></span>
    <input type="password" asp-for="Password"><br>

    <label>Confirm Password:</label>
    <input type="password" name="ConfirmPassword"><br>

    <input type="submit">
    </table>
</form> 

<h2>Login</h2>
<form action="LoginUser" method="post">
    <table>
        <tr>
            <td><label>Email:</label></td>
            <td><input type="text" name="Email"></td>
        </tr>
        <tr>
            <td><label>Password:</label></td>
            <td><input type="text" name="Password"></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit"></td>
        </tr>
    </table>
</form>

<p>@ViewBag.loginError</p>