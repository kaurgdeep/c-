@model User
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <style>
            form{
                width: 400px;
                height: 600px;
                display: block;
            }
        </style>
    </head>
    <body>
        <form asp-action="Create" asp-controller="Home" method="post">
            <span asp-validation-for="FirstName"></span>
            <p><label asp-for="FirstName">First Name:</label></p>
            <p><input asp-for="FirstName"></p>
            <span asp-validation-for="LastName"></span>
            <p><label asp-for="LastName">Last Name:</label></p>
            <p><input asp-for="LastName"></p>
            <span asp-validation-for="Age"></span>
            <p><label asp-for="Age">Age:</label></p>
            <p><input asp-for="Age"></p>
            <span asp-validation-for="Email"></span>
            <p><label asp-for="Email">Email:</label></p>
            <p><input asp-for="Email"></p>
            <span asp-validation-for="Password"></span>
            <p><label asp-for="Password">Password:</label></p>
            <p><p><input asp-for="Password"></p>
            <p><input value="Add User" type="submit"></p>

        </form>
    </body>
</html>